.fill
	flex-grow: 1;
	

.img
	background: none 50% 50% / contain no-repeat transparent;
	width: 100%;
	

section.bespoke-slide
	p
		margin-left: 30px;
		margin-right: 30px;
img
	display: block;
	margin: 0;
	
.cite
	font-weight: 300;
	font-size: 0.6em;
	margin: .8em 0;
	.authors, .year
		font-size: 0.9em;	

#heer-wickham
	padding-top: 15px;
	padding-bottom: 5px;
	display: flex;
	flex-direction: column;
	align-items: stretch;

	.img
		flex-grow: 1;
	
	> div
		align-items: stretch;
		display: flex;
		flex-direction: column;		
		flex-grow: 1;
		//border: 1px solid red;
		overflow: hidden;
	.images
		flex-grow: 1;
		display: flex;

	
section.full-bg
	//border: 1px solid red;
	background-size: cover;
	background-repeat: none;
	background-position: 0 0;
	
#cover
	h1
		position: relative;
	.year
		display: block;
		font-style: italic;
		color: #F04E5E;
		position: absolute;
		right: 0;
		top: -2em;
		font-size: 30%;

#owl
	max-height: 400px;
	width: auto;
	

	
h3
	text-transform: uppercase;

.row p
	margin: 0;
	text-align: left;
.left
	float: left;
	width: 50%;

.right
	float: right;
	width: 50%;